<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textColor">@color/primaryTextColor</item>

        <item name="textAppearanceHeadline1">@style/AppTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/AppTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/AppTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/AppTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/AppTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/AppTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/AppTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/AppTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/AppTheme.Body1</item>
        <item name="textAppearanceBody2">@style/AppTheme.Body2</item>
        <item name="textAppearanceCaption">@style/AppTheme.Caption</item>
        <item name="textAppearanceButton">@style/AppTheme.Button</item>
        <item name="textAppearanceOverline">@style/AppTheme.Overline</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/RoundBottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="RoundBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

</resources>
